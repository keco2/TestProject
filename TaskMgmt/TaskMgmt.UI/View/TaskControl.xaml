<UserControl x:Class="TaskMgmt.UI.View.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TaskMgmt.UI.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightGreen">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="30"/>
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <DataGrid Background="BurlyWood"
                      SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                      ItemsSource="{Binding TaskList}">

            </DataGrid>
            <Label Grid.Row="1" Content="{Binding Message}" HorizontalAlignment="Center"/>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Add new" Width="150" />
                <Button Content="Update selected" Width="150" />
                <Button Content="Delete selected" Width="150" Command="{Binding DeleteTaskCmd}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
